# OpenAI API Key - for GPT-4o Realtime API
OPENAI_API_KEY=sk-...

# Mem0 API Key - for persistent memory
MEM0_API_KEY=...

# Turso Database - for conversation metadata
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=...

# ============================================
# WhatsApp Integration (choose one provider)
# ============================================

# Provider: 'meta' or 'twilio'
WHATSAPP_PROVIDER=meta

# Meta WhatsApp Business API (Cloud API)
# Get these from: https://developers.facebook.com/apps/
WHATSAPP_META_ACCESS_TOKEN=...
WHATSAPP_META_PHONE_NUMBER_ID=...
WHATSAPP_META_BUSINESS_ACCOUNT_ID=...
WHATSAPP_META_WEBHOOK_VERIFY_TOKEN=your-secret-verify-token

# Twilio WhatsApp (alternative)
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=...
TWILIO_AUTH_TOKEN=...
TWILIO_WHATSAPP_NUMBER=+14155238886
