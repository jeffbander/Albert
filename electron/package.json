{
  "name": "albert-desktop",
  "version": "1.0.0",
  "description": "Albert Mission Control - AI Voice Assistant Desktop App",
  "main": "main.js",
  "author": "Bander Labs",
  "license": "MIT",
  "scripts": {
    "start": "electron . --dev",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.banderlabs.albert",
    "productName": "Albert Mission Control",
    "directories": {
      "output": "../dist-electron"
    },
    "files": [
      "**/*",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "../.next",
        "to": ".next",
        "filter": ["**/*"]
      },
      {
        "from": "../public",
        "to": "public",
        "filter": ["**/*"]
      },
      {
        "from": "../package.json",
        "to": "package.json"
      },
      {
        "from": "../node_modules",
        "to": "node_modules",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "Albert-Portable-${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
